LOCALBASE=/usr/local
X11BASE=/usr/X11R6

case "$2" in
  "DEINSTALL")
    rm -f ${LOCALBASE}/share/AccessGrid/xdg/*.orig
    rm -rf ${X11BASE}/share/applications/AccessGrid
    rm -rf ${X11BASE}/share/desktop-directories/*3*
    dtopdir=${X11BASE}/share/desktop-directories
    if [ -d ${dtopdir} -a `ls ${dtopdir}|wc -l` -eq 0 ]; then
      rmdir ${dtopdir}
    fi
    rm -rf ${X11BASE}/etc/xdg/menus/applications-merged/AccessGrid3.menu
    mergedir=${X11BASE}/etc/xdg/menus/applications-merged
    if [ -d ${mergedir} -a `ls ${mergedir}|wc -l` -eq 0 ]; then
      rmdir ${mergedir}
    fi
    ;;
  "POST-DEINSTALL")
    rm -f ${LOCALBASE}/etc/AccessGrid3/Services
    rm -f ${LOCALBASE}/etc/AccessGrid3/PackageCache
    rm -f ${LOCALBASE}/etc/AccessGrid3/Logs
    ;;
esac



