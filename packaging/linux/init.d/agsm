#!/bin/sh
#
# agsm		This shell script takes care of starting and stopping
#		the Access Grid Service Manager
#
# chkconfig: - 95 05
# description: The Access Grid Service Manager

# Source function library.
. /etc/init.d/functions

# Source networking configuration.
. /etc/sysconfig/network

# Check that networking is up.
[ ${NETWORKING} = "no" ] && exit 0

[ -x /usr/bin/AGServiceManager.py ] || exit 

RETVAL=0
prog="AGServiceManager"
datadir="/var/run/agsm"

start() {
    # Start daemons.
    touch /var/log/agsm.log
    chown ag.ag /var/log/agsm.log
    chmod 0640 /var/log/agsm.log
    if [ ! -d $datadir ]; then
	mkdir -p $datadir
	chown -R ag.ag $datadir
	chmod 0640 $datadir
    fi
    echo -n $"Starting $prog: "
    daemon --user ag AGServiceManager.py
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch /var/lock/subsys/agsm
    return $RETVAL
}

stop() {
    # Stop daemons.
    echo -n $"Shutting down $prog: "
    killproc AGServiceManager.py
    RETVAL=$?
    echo
    if [ -d $datadir ]; then
	rm -rf $datadir
    fi
    [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/agsm
    return $RETVAL
}

# See how we were called.
case "$1" in
    start)
	start
        ;;
    stop)
	stop
        ;;
    status)
	status agsm
	RETVAL=$?
	;;
    restart|reload)
	stop
	start
	RETVAL=$?
	;;
    condrestart)
	if [ -f /var/lock/subsys/agsm ]; then
	    stop
	    start
	    RETVAL=$?
	fi
	;;
    *)
        echo $"Usage: $0 {start|stop|restart|condrestart|status}"
        exit 1
esac

exit $RETVAL
