#!/bin/sh
#
# agns		This shell script takes care of starting and stopping
#		the Access Grid Node Service
#
# description: The Access Grid Service Manager

[ -x /usr/bin/AGNodeService.py ] || exit 

RETVAL=0
prog="AGNodeService"
datadir="/var/run/agns"

start() {
    # Start daemons.
    touch /var/log/agns.log
    chown ag.ag /var/log/agns.log
    chmod 0640 /var/log/agns.log
    if [ ! -d $datadir ]; then
	mkdir -p $datadir
	chown -R ag.ag $datadir
	chmod 0640 $datadir
    fi
    echo -n $"Starting $prog: "
#    daemon --user ag AGNodeService.py
     su ag -c /usr/bin/AGNodeService.py &
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch /var/lock/subsys/agns
    return $RETVAL
}

stop() {
    # Stop daemons.
    echo -n $"Shutting down $prog: "
    killall AGNodeService.py
    RETVAL=$?
    echo
    if [ -d $datadir ]; then
	rm -rf $datadir
    fi
    [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/agns
    return $RETVAL
}

# See how we were called.
case "$1" in
    start)
	start
        ;;
    stop)
	stop
        ;;
    status)
	status agns
	RETVAL=$?
	;;
    restart|reload)
	stop
	start
	RETVAL=$?
	;;
    condrestart)
	if [ -f /var/lock/subsys/agns ]; then
	    stop
	    start
	    RETVAL=$?
	fi
	;;
    *)
        echo $"Usage: $0 {start|stop|restart|condrestart|status}"
        exit 1
esac

exit $RETVAL
